<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.ToDoListsController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Button fx:id="addButton" layoutX="21.0" layoutY="296.0" mnemonicParsing="false" onAction="#addTask" text="Add Task" />
      <TextField fx:id="titleTextField" layoutX="95.0" layoutY="296.0" prefHeight="25.0" prefWidth="85.0" promptText="Enter Title" />
      <TextField fx:id="dueDateTextField" layoutX="190.0" layoutY="296.0" prefHeight="25.0" prefWidth="98.0" promptText="Enter Due Date" />
      <TextField fx:id="descriptionTextField" layoutX="302.0" layoutY="296.0" prefHeight="25.0" prefWidth="253.0" promptText="Enter Description" />
      <TableView layoutX="20.0" layoutY="26.0" prefHeight="255.0" prefWidth="535.0">
        <columns>
          <TableColumn fx:id="columnTitle" prefWidth="75.0" text="Title" />
          <TableColumn fx:id="columnDueDate" prefWidth="75.0" text="Due Date" />
            <TableColumn fx:id="columnDescription" prefWidth="383.0" text="Description" />
        </columns>
      </TableView>
      <Button fx:id="deleteButton" layoutX="21.0" layoutY="335.0" mnemonicParsing="false" onAction="#deleteTask" text="Delete Task" />
      <TextField fx:id="deleteTextField" layoutX="116.0" layoutY="335.0" prefHeight="25.0" prefWidth="241.0" promptText="Enter name of the task you want to delete" />
      <Button fx:id="saveButton" layoutX="21.0" layoutY="374.0" mnemonicParsing="false" onAction="#saveToFile" text="Save" />
   </children>
</AnchorPane>
